/* global settings and color variables */
* {
   maincolor:        rgba(41, 128, 185, 1);
   highlight:        bold rgba(41, 128, 185, 1);
   urgentcolor:      #e53714;

   fgwhite:          rgba(255, 255, 255, 1);
   blackdarkest:     transparent; /* inner window color change*/
   blackwidget:      rgba(10, 10, 10, 1);
   blackentry:       transparent;
   blackselect:      rgba(65, 246, 185, 1);
   darkgray:         rgba(255, 255, 255, 1);
   scrollbarcolor:   rgba(80, 80, 80, 1);
   font: "Inter Variable 14";
   background-color: transparent;
}
/* rgba(255, 0, 0, 1);  */
window {
   background-color: transparent; /* whole window color change */
   anchor: north;
   location: north;
   y-offset: 25%;
   border-radius: 15px;
   border-color: rgba(53, 187, 185, 1);
   border: 2px;
   background-image: linear-gradient(90deg, rgba(41, 128, 185, 0.15), rgba(65, 246, 185, 0.15));
   /* padding: 1em; */
   }
mainbox {
   background-color: transparent; /* inner window color change 2 */
   spacing:0px;
   children: [inputbar, message, mode-switcher, listview];
}

message {
   padding: 6px 10px;
   background-color:@blackwidget;
}

textbox {
   text-color:@darkgray;
   background-color:@blackwidget;
}

listview {
   fixed-height: false;
   dynamic: true;
   scrollbar: true;
   spacing: 0px;
   padding: 1px 0px 0px 0px;
   margin: 0px 0px 1px 0px;
   background: transparent;
}

element {
   padding: 2px 15px;
}

element normal.normal {
   padding: 0px 15px;
   background-color: transparent;
   text-color: rgba(65, 246, 185, 1);
}

element normal.urgent {
   background-color: @blackentry;
   text-color: @urgentcolor;
}

element normal.active {
   background-color: @blackentry;
   text-color: rgba(41, 128, 185, 1);
}

element selected.normal {
    background-color: rgba(3, 76, 81, 0.7);
    text-color:       rgba(53, 187, 185, 1);
    border-radius: 15px;
}

element selected.urgent {
    background-color: @urgentcolor;
    text-color:       rgba(0, 0, 0, 1);
}

element selected.active {
    background-color: rgba(65, 246, 185, 0.7);
    text-color:       rgba(3, 76, 81, 1);
    border-radius: 15px;
}

element alternate.normal {
    background-color: transparent;
    text-color:       rgba(65, 246, 185, 1);
}

element alternate.urgent {
    background-color: @blackentry;
    text-color:       @urgentcolor;
}

element alternate.active {
    background-color: @blackentry;
    text-color:       @maincolor;
}

scrollbar {
   background-color: transparent;
   handle-color: transparent;
   handle-width: 0px; /* if value > 0 will appear scrollbar */
}

mode-switcher {
   background-color: rgba(3, 76, 81, 0.7);
   border-radius: 15px;
}

button {
   background-color: transparent;
   text-color:       rgba(53, 187, 185, 1);
}

button selected {
    text-color:       rgba(65, 246, 185, 1);
    background-color: transparent;
    border-radius: 15px;
}

inputbar {
   background-color: transparent;
   spacing: 0px;
}

prompt {
   padding:6px 9px;
   background-color: transparent;
   text-color:rgba(41, 128, 185, 1);
}

entry {
   placeholder: "";
   padding:6px 10px;
   background-color:transparent;
   text-color:rgba(65, 246, 185, 1);
}

case-indicator {
   padding:6px 10px;
   text-color:@maincolor;
   background-color: transparent; /* if case-indicator doesnt show set a color */
}